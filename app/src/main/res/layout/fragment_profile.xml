<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/above_part"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/profile_part"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="169dp"
            android:layout_height="195dp"
            android:src="@drawable/avatar_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423" />

        <ImageView
            android:id="@+id/username_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toEndOf="@+id/username"
            app:layout_constraintTop_toTopOf="@id/username"
             />


        <ImageView
            android:id="@+id/email_part"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:src="@drawable/profile_section_ui"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintVertical_bias="0.119"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_email_24"
            app:layout_constraintStart_toStartOf="@id/email_part"
            app:layout_constraintTop_toTopOf="@id/email_part"
            app:layout_constraintBottom_toBottomOf="@id/email_part"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/email_part"
            app:layout_constraintTop_toTopOf="@id/email_part"
            app:layout_constraintBottom_toBottomOf="@id/email_part"
            android:paddingLeft="68dp"
            />




        <ImageView
            android:id="@+id/password_part"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:src="@drawable/profile_section_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_part"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/password"
            app:layout_constraintStart_toStartOf="@id/password_part"
            app:layout_constraintTop_toTopOf="@id/password_part"
            app:layout_constraintBottom_toBottomOf="@id/password_part"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@id/password_part"
            app:layout_constraintTop_toTopOf="@id/password_part"
            app:layout_constraintBottom_toBottomOf="@id/password_part"
            android:paddingLeft="68dp"
            />
        <ImageView
            android:id="@+id/password_edit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintTop_toTopOf="@id/password_part"
            app:layout_constraintBottom_toBottomOf="@id/password_part"
            app:layout_constraintEnd_toEndOf="@id/password_part"
            android:paddingRight="18dp"
            android:paddingLeft="5dp"
            />







        <ImageView
            android:id="@+id/contact_part"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:src="@drawable/profile_section_ui"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_part"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_contact_support_24"
            app:layout_constraintStart_toStartOf="@id/contact_part"
            app:layout_constraintTop_toTopOf="@id/contact_part"
            app:layout_constraintBottom_toBottomOf="@id/contact_part"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@id/contact_part"
            app:layout_constraintTop_toTopOf="@id/contact_part"
            app:layout_constraintBottom_toBottomOf="@id/contact_part"
            android:paddingLeft="68dp"
            />






        <ImageView
            android:id="@+id/logout_part"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:src="@drawable/profile_section_ui"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_part"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/logout"
            app:layout_constraintStart_toStartOf="@id/logout_part"
            app:layout_constraintTop_toTopOf="@id/logout_part"
            app:layout_constraintBottom_toBottomOf="@id/logout_part"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@id/logout_part"
            app:layout_constraintTop_toTopOf="@id/logout_part"
            app:layout_constraintBottom_toBottomOf="@id/logout_part"
            android:paddingLeft="68dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>